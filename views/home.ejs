        <% include nav.ejs %>

    <h1 class="title">What would you like to borrow?</h1>
    <div id='search'>  
      <center>
      <form method="post" action="/">
        <div class='cell'><input type='search' name='search' placeholder='Search'></div>
        <div class='cell'><button class='button'>Search</button></div>
    </form>
  </center>
    </div>
    <hr>

    <% for(var i=0; i<library.length; i++) { %>
        
          <% if (library[i].status == "available") { %>
          <div class="itemBox" style="background-color: rgb(114, 182, 191);">
                <h2 class="itemName"><%= library[i].name %></h2>
                Owner: <%= library[i].owner %>

                <hr>

            <form method="post" action="/borrowed">
             
             <input type="hidden" name="owner" value=<%= library[i].owner %>></input>
             <input type="hidden" name="item" value=<%= library[i].name %>></input>

             <button class="borrowButton">Borrow</button>
            </form>
          </div>
              
  
           <% } %>
    <% } %>


    
    
